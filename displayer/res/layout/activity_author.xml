<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/paper_background"
    android:orientation="vertical" >
	
	<include layout="@layout/topmenu_short" android:id="@+id/included"/>
    
	<ListView android:id="@+id/scrollerBody"
    	android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_below="@id/included" />
	
	<ImageView android:id="@+id/barbel"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
    	android:layout_below="@id/included"
	    android:scaleType="fitXY"
	    android:src="@drawable/author_title_barbel"
		android:contentDescription="@string/description_barbel" />

</RelativeLayout>