<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/best_background">

	<include layout="@layout/topmenu_short" android:id="@+id/included"/>

	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical">
	    
		<View
	        android:layout_width="0dp"
	        android:layout_height="0dp"
	        android:layout_weight="280" />
		
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="0dp"
		    android:layout_weight="60"
		    android:orientation="horizontal">
		    
			<View
		        android:layout_width="0dp"
		        android:layout_height="0dp"
		        android:layout_weight="190" />
			
	        <ImageButton android:id="@+id/spikeButton"
	            android:background="?android:selectableItemBackground"
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="140"
	            android:scaleType="fitXY"
	            android:onClick="spikeButton" />
	            
	        <TextView android:id="@+id/spikeCount"
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="120"
	            android:textColor="#000000"
	            android:gravity="center"
	            android:textSize="24sp" />			
	            
			<View
		        android:layout_width="0dp"
		        android:layout_height="0dp"
		        android:layout_weight="190" />
			
		</LinearLayout>
		
		<View
	        android:layout_width="0dp"
	        android:layout_height="0dp"
	        android:layout_weight="70" />
		
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="0dp"
		    android:layout_weight="360"
		    android:orientation="horizontal">

   			<View
		        android:layout_width="0dp"
		        android:layout_height="0dp"
		        android:layout_weight="150" />
   			
		    <ImageButton android:id="@+id/image"
		        android:background="?android:selectableItemBackground"
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_weight="340"
		        android:scaleType="fitCenter"
		        android:onClick="imageButton" />			
		        
			<View
		        android:layout_width="0dp"
		        android:layout_height="0dp"
		        android:layout_weight="150" />
			
		</LinearLayout>
				
		<View
	        android:layout_width="0dp"
	        android:layout_height="0dp"
	        android:layout_weight="70" />
			
        <TextView android:id="@+id/author"
		    android:layout_width="match_parent"
		    android:layout_height="0dp"
		    android:layout_weight="70"
        	android:gravity="center"
		    android:text="AUTHOR"
		    android:textColor="#000000"
            android:textSize="24dp" />
				
		<View
	        android:layout_width="0dp"
	        android:layout_height="0dp"
	        android:layout_weight="50" />		
		
	</LinearLayout>
	
</RelativeLayout>