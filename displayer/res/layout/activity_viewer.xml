<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/paper_background" >

	<include android:id="@+id/topMenu" layout="@layout/topmenu" />
	
	<ListView android:id="@+id/scrollerBody"
    	android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_below="@id/topMenu" />
	
	<ImageView android:id="@+id/barbel"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
    	android:layout_below="@id/topMenu"
	    android:scaleType="fitXY"
		android:contentDescription="@string/description_barbel" />

</RelativeLayout>