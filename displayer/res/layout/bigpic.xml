<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/cactus"
    android:background="@drawable/big_pic" >
    
    <ImageButton android:id="@+id/newImage"
        android:background="?android:selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:onClick="imageButton" />
		
    <ImageButton android:id="@+id/newSpikeButton"
        android:background="?android:selectableItemBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:onClick="spikeButton" />
    	
    <TextView android:id="@+id/newSpikeCount"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="#000000"
        android:gravity="center_vertical"
        android:textSize="24sp" />
    	
    <TextView android:id="@+id/newAuthor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="#000000"
        android:gravity="right|center_vertical"
        android:textSize="24sp" />
    
</RelativeLayout>